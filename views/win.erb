<style>
  body {
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  }
  .emoji {
    font-size: 5rem;
    text-align: center;
    margin-bottom: 20px;
    animation: pulse 1s infinite;
  }
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
  .win-title {
    color: #28a745;
    font-size: 3rem;
    text-align: center;
    margin-bottom: 20px;
  }
  .word-reveal {
    font-size: 2rem;
    font-weight: bold;
    color: #667eea;
    text-align: center;
    margin: 30px 0;
    letter-spacing: 5px;
  }
  .message {
    color: #666;
    font-size: 1.2rem;
    text-align: center;
    margin: 20px 0;
  }
  .play-again {
    text-align: center;
    margin-top: 20px;
  }
</style>

